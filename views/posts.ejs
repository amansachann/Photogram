<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Posts</title>
    <!-- Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <div class="container">
        <span class="navbar-brand mb-0 h1">ðŸ“· Photogram</span>
        <a href="/posts/new"
          ><button type="button" class="btn btn-dark">New Post</button></a
        >
      </div>
    </nav>
    <!-- x Navbar ends x -->
    <!-- All Posts -->
    <section class="all-posts">
      <div class="container text-center mt-4">
        <h1>All Posts</h1>
      </div>
      <div
        class="container d-flex flex-wrap justify-content-evenly align-items-start"
      >
        <% for(post of posts) {%>
        <div class="card my-4">
          <img src="<%=post.imageUrl%>" class="card-img-top" alt="" />
          <div class="card-body">
            <p class="text-success">@<%= post.author %></p>
            <h5 class="card-title text-danger"><%= post.title %></h5>
            <p class="card-text text-secondary"><%= post.content %></p>
            <a href="/posts/<%=post.id%>"
              ><button type="button" class="btn btn-success me-1">
                View
              </button></a
            >
            <a href="/posts/<%=post.id%>/edit"
              ><button type="button" class="btn btn-warning me-1">
                Edit
              </button></a
            >
            <form action="/posts/<%= post.id %>?_method=DELETE" method="post" style="display: inline;">
              <button type="submit" class="btn btn-danger me-1">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </section>
    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
